@page "/Add_an_adult"
@using DNP1_A1.Data
@using DNP1_A1.Models
@inject IAdultService AdultService;
@inject NavigationManager NavigationManager;

<div>
    <h3 class="ownHeader">Register an adult</h3>

    <EditForm Model="@newAdult" OnValidSubmit="@addNew">
        <DataAnnotationsValidator/><ValidationSummary/>
        <div class="row" style="display:flex; justify-content:space-around">
        <div class="form-group">
            Id: <br/>
            <InputNumber @bind-Value="newAdult.Id" ></InputNumber>
        </div>
        <div class="form-group">
            First name:<br/>
            <InputTextArea rows="1" @bind-Value="newAdult.FirstName"></InputTextArea>
        </div>
        <div class="form-group">
            Weight: <br/>
            <InputNumber @bind-Value="newAdult.Weight"></InputNumber>
        </div>
        </div>
        <div class="row" style="display:flex; justify-content:space-around">
        <div class="form-group">
            Hair color:<br/>
            <InputTextArea rows="1" @bind-Value="newAdult.HairColor"></InputTextArea>
        </div>
        <div class="form-group">
            Last name:<br/>
            <InputTextArea rows="1" @bind-Value="newAdult.LastName"></InputTextArea>
        </div>
        <div class="form-group">
            Eye color:<br/>
            <InputTextArea rows="1" @bind-Value="newAdult.EyeColor"></InputTextArea>
        </div>
        </div>
        <div class="row" style="display:flex; justify-content:space-around">
        <div class="form-group">
            Age: <br/>
            <InputNumber @bind-Value="newAdult.Age"></InputNumber>
        </div>
        <div class="form-group">
            Sex:<br/>
            <InputTextArea rows="1" @bind-Value="newAdult.Sex"></InputTextArea>
        </div>
        <div class="form-group">
            Height: <br/>
            <InputNumber @bind-Value="newAdult.Height"></InputNumber>
        </div>
</div>
<div class="row" style="display:flex; justify-content:center">
        <div class="form-group">
            Job: <br/>
            <InputTextArea @bind-Value="newAdult.JobTitle"></InputTextArea>
        </div>
</div>
        <p class="actions">
            <button class="btn btn-outline-success" type="submit">Add</button>
        </p>


    </EditForm>

</div>


@code {
    private Adult newAdult = new Adult();

    private void addNew()
    {
        AdultService.AddAdult(newAdult);
        NavigationManager.NavigateTo("/AdultsOverview");
    }

}